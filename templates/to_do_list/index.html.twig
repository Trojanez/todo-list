{% extends 'base.html.twig' %}

{% block title %}To-do list!{% endblock %}

{% block body %}
<header style="width: 100%; height: 200px; background-color: blue;">
    <h1 style="color: #fff; text-align: center; padding-top: 50px;">My To Do List</h1>
        <div class="row">
            <div class="col-md-8" style="display: block; margin: 0 auto">
                <form class="row" action="" method="post">
                    <div class="col-12 col-sm pr-sm-0">
                        <input type="text" name="search" id="search" placeholder="Task title..." class="form-control">
                    </div>
                    <div class="col-12 col-sm-auto pl-sm-0">
                        <input type="button" name="commit" value="Add a task" class="btn btn-primary btn-block">
                    </div>
                </form>
            </div>
        </div>
</header>
    <div class="row">
        <ul>
            <li>
                <a href="">Do shopping</a>
            </li>
        </ul>
    </div>
{% endblock %}
